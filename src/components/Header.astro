---
import GithubSVGBlack from "../../public/socials/github/github_black.svg";
import TwitchSVGBlack from "../../public/socials/twitch/twitch_black.svg";
import GithubSVGWhite from "../../public/socials/github/github_white.svg";
import TwitchSVGWhite from "../../public/socials/twitch/twitch_white.svg";

import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="flex flex-col w-full p-4">
	<nav class="flex flex-col gap-4 md:gap-0 md:flex-row w-full justify-between">
		<h2><a href="/" class="text-5xl font-black tracking-tighter">{SITE_TITLE}</a></h2>
		<div class="flex flex-row items-center gap-8">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="flex-row hidden md:flex gap-2">
			<a href="https://github.com/jezpoz" target="_blank" class="flex dark:hidden">
				<span class="sr-only">Go to Jezpoz's GitHub page</span>
				<GithubSVGBlack viewBox="0 0 100 100" height="32" width="32" astro-icon="social/github"/>
			</a>
			<a href="https://www.twitch.tv/jezpoz" target="_blank" class="flex dark:hidden">
				<span class="sr-only">Go to Jezpoz's Twitch account</span>
				<TwitchSVGBlack height="32" width="32" astro-icon="social/twitch"/>
			</a>
			<a href="https://github.com/jezpoz" target="_blank" class="hidden dark:flex">
				<span class="sr-only">Go to Jezpoz's GitHub page</span>
				<GithubSVGWhite viewBox="0 0 100 100" height="32" width="32" astro-icon="social/github"/>
			</a>
			<a href="https://www.twitch.tv/jezpoz" target="_blank" class="hidden dark:flex">
				<span class="sr-only">Go to Jezpoz's Twitch account</span>
				<TwitchSVGWhite height="32" width="32" astro-icon="social/twitch"/>
			</a>
		</div>
	</nav>
</header>